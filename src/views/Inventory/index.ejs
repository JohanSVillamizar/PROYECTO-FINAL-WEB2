<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SGIA-Inventario</title>
    <link href="../public/css/styles.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>

    <!-- Bot贸n para regresar al index principal -->
    <a href="/" class="btn btn-primary mt-3 btn-return">
        <span class="material-symbols-outlined icon-home">
            home
        </span>
        Regresar
    </a>

    <div class="container">
        <h1 class="mt-5">Inventario</h1>

        <form action="/inventory" method="post" class="mb-5">
            <div class="form-group">
                <label for="name">Nombre del producto</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Descripci贸n</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <div class="fields-distrib">
                <div class="form-group w-100 mr-2 ">
                    <label for="quantity">Cantidad</label>
                    <input type="number" id="quantity" name="quantity" class="form-control" required>
                </div>
                <div class="form-group w-100">
                    <label for="location">Ubicaci贸n</label>
                    <input type="text" id="location" name="location" class="form-control">
                </div>
            </div>
            <div class="fields-distrib">
                <div class="form-group w-100 mr-2">
                    <label for="brand">Marca</label>
                    <input type="text" id="brand" name="brand" class="form-control">
                </div>
                <div class="form-group w-100">
                    <label for="price">Precio</label>
                    <input type="number" id="price" name="price" class="form-control" required>
                </div>
            </div>
            <div class="fields-distrib">
                <div class="form-group w-100 mr-2">
                    <label for="entry_date">Fecha de entrada</label>
                    <input type="date" id="entry_date" name="entry_date" class="form-control" required>
                </div>
                <div class="form-group w-100">
                    <label for="categoryId">Category</label>
                    <select id="categoryId" name="categoryId" class="form-control">
                        <% categories.forEach(function(category) { %>
                            <option value="<%= category.id %>">
                                <%= category.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Agregar producto</button>
        </form>

        <h2>Productos</h2>
        <ul class="list-group">
            <% inventory.forEach(function(item){ %>
                <li class="list-group-item">
                    <div class="info-product">
                        <strong>
                            <%= item.name %>
                        </strong>
                        - <%= item.description %> (Stock: <%= item.quantity %>)
                    </div>
                    <div class="ubication-product">
                        <strong>Ubicaci贸n:</strong>
                        <%= item.location %>
                        <strong>Fecha de ingreso:</strong>
                        <%= item.formatted_entry_date %>
                    </div>                    

                    <div>
                        <a href="/inventory/<%= item.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/inventory/<%= item.id %>" method="post" class="d-inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </div>
                </li>
                <% }); %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>